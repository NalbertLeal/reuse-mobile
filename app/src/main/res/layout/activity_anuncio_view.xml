<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrn.reuse.activity.AnuncioViewActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="490dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <!-- foto, descricao, etiqueta, tombamento, anunciante -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/demonstrar_interesse"
                android:layout_width="218dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/nav_header_height"
                android:background="@color/colorAccent"
                android:text="Demonstrar Interesse" />

            <ImageView
                android:id="@+id/imgLauncher"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/view_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do bem"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                tools:textSize="30sp" />

            <TextView
                android:id="@+id/view_etiqueta"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:text="Etiqueta"
                android:background="@color/colorGray"
                android:textAlignment="textStart"
                tools:textSize="20sp" />

            <TextView
                android:id="@+id/view_tombamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tombamento"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                tools:textSize="20sp" />

            <TextView
                android:id="@+id/view_publicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto de publicação"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                tools:textSize="30sp" />

            <TextView
                android:id="@+id/view_ofertante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ofertante"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                tools:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
