<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrn.reuse.activity.AnuncioViewActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="490dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/textVerAnuncios"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Visualizar AnÃºncio"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:textSize="30sp" />

        </LinearLayout>
        <!-- foto e nome do perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLauncher"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/anuncio_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Descricao"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:textSize="30sp" />

            <TextView
                android:id="@+id/anuncio_publicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Texto Publicacao"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
