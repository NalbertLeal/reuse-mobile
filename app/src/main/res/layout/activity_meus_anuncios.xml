<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrn.reuse.activity.MeusAnunciosAdapter"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="490dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Meus AnÃºncios"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:textSize="30sp" />

        <!-- foto e nome do perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="-80dp"
                android:text="Nalbert Gabriel"
                android:textColor="#333"
                android:id="@+id/nome_usuario"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/anunciosScroll">

            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linear_layout_meus_anuncios">

            </LinearLayout>
            -->



            <GridView
                android:id="@+id/lista_meus_anuncios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cinzaFundoListaVitrine">

            </GridView>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
