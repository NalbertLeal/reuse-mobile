<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_vitrine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/side_nav_bar"
        android:paddingTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/definicaoReuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="24dp"
            android:text="REUSE - Sistema de reaproveitamento de bens da UFRN"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:id="@+id/text_busca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/colorPrimary"
                android:hint="Procurar..."
                android:padding="08dp" />

            <Button
                android:id="@+id/button_buscar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_menu_camera"
                android:gravity="center"
                android:padding="08dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxCategorias"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:background="@color/colorBackgroud">

        </LinearLayout>

        <TextView
            android:id="@+id/quantidade_resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="0 Anuncio(s) encontrado(s)" />

        <GridView
            android:id="@+id/lista_vitrine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cinzaFundoListaVitrine">

        </GridView>

    </LinearLayout>


</LinearLayout>